# Database (for db package – refresh-portfolio and 15s job)
DATABASE_URL="postgresql://postgres:postgres@127.0.0.1:5432/mydb"

# Redis (for cached-db – portfolio-enriched cache write). Use 127.0.0.1 if localhost gives ENOTFOUND.
REDIS_URL="redis://127.0.0.1:6379"

# HTTP API port (backend calls POST /refresh-portfolio here)
WS_HTTP_PORT=8081
# WebSocket port (default 8080; must be different from WS_HTTP_PORT)
# WS_PORT=8080

# Optional (defaults in code): PORTFOLIO_REFRESH_INTERVAL_MS=15000, PORTFOLIO_CACHE_TTL=60

# Redis stream queue (batch worker)
# PORTFOLIO_QUEUE_BATCH_SIZE=3     # users per batch
# PORTFOLIO_QUEUE_BLOCK_MS=3000   # block time when waiting for messages
# PORTFOLIO_QUEUE_DELAY_MS=5000   # delay between batches (reduces Yahoo/Google API load)
